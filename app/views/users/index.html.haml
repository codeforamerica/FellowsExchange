.container
  %h1 Fellows

  = render 'search'

  - if @users.empty?
    %h2 No results found
  - else
    %table
      %thead
        %tr
          %th Name
          %th Skills
          %th Interests
          %th
      %tbody
        - @users.each do |user|
          %tr
            %td= user.name
            %td
              - unless user.skills.nil?
                - user.skill_list.each do |skills|
                  = link_to skills, :tag => skills
