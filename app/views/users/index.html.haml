.container
  %h1 Fellows

  = form_tag users_path, :method => 'get' do
    .well
      .row
        .span6
          .clearfix
            = label_tag "Skills / Interests"
            .input
              = text_field_tag :tag, params[:tag]
      .row
        .span5
          = submit_tag "Search", :name => nil, :class => "btn info"

  %table
    %thead
      %tr
        %th Name
        %th Skills
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td
            - unless user.skills.nil?
              - user.skill_list.each do |skills|
                = link_to skills, :tag => skills
          %td= link_to 'Show', user
